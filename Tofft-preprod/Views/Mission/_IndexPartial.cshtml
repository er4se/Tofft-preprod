@using Tofft_preprod.Models;
@model Mission

<head>
    <link rel="stylesheet" href="~/css/board-index.css" />
</head>

<div class="mission-tab d-flex flex-column"
     onclick="window.location.href='@Url.Action("Index", "Mission", new { boardId = Model.BoardId, id = Model.Id })'"
     style="cursor: pointer;">
    <div class="mission-tab-info-top d-flex flex-row">
        <div class="mission-status-view rounded-circle"></div>
        <div class="mission-group-view d-flex flex-row align-items-center justify-content-center">
            <h5>@Model.Group</h5>
        </div>
        <div class="mission-executor-view rounded-circle"></div>
    </div>
    <div class="mission-tab-info-bot d-flex flex-column">
        <h4 class="mission-title">@Model.Description</h4>
        <div class="mission-attachments-view"></div>
    </div>
</div>
