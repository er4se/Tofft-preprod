@using Tofft_preprod.Models
@model MissionDTO

<head>
    <link rel="stylesheet" href="~/css/mission.css" />
</head>

<body>
    <content>
        <form asp-action="Edit" method="post">
            <div class="page-content-container container row">
                <div class="content-top-head d-flex flex-row align-items-center">
                    <h1 class="top-head-title">РЕДАКТИРОВАНИЕ ЗАДАЧИ</h1>
                </div>
                <div class="content-main-body">
                    <div class="mission-creation-cluster">
                        <div class="mission-creation-title d-flex flex-row align-items-center">
                            <div class="mini-icon-box"></div>
                            <h2 class="mission-creation-subtitle">Основная информация</h2>
                        </div>
                        <div class="mission-creation-input-block">
                            <p class="mission-creation-input-title">Название задачи:</p>
                            <input asp-for="Title" class="mission-creation-input" placeholder="@Model.Title"/>
                        </div>
                        <div class="mission-creation-input-block">
                            <p class="mission-creation-input-title">Описание задачи:</p>
                            <input asp-for="Description" class="mission-creation-input" placeholder="@Model.Description"/>
                        </div>
                        <div class="mission-creation-input-block">
                            <p class="mission-creation-input-title">Целевой отдел:</p>
                            <input asp-for="Group" class="mission-creation-input" placeholder="@Model.Group"/>
                        </div>
                        <div class="mission-creation-input-block">
                            <p class="mission-creation-input-title">Дата выполнения:</p>
                            <input asp-for="Deadline" class="mission-creation-input datepicker" placeholder="@Model.Deadline"/>
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mission-creation-cluster" style="pointer-events: none; opacity: 0.6;">
                        <div class="mission-creation-title d-flex flex-row align-items-center">
                            <div class="mini-icon-box"></div>
                            <h2 class="mission-creation-subtitle">Расширенные функции</h2>
                        </div>
                        <div class="mission-creation-input-block d-flex flex-row align-items-center">
                            <input type="checkbox" class="mission-creation-radio" />
                            <p class="mission-creation-input-title">Загрузить файлы</p>
                        </div>
                        <div class="mission-creation-input-block d-flex flex-row align-items-center">
                            <input type="checkbox" class="mission-creation-radio" />
                            <p class="mission-creation-input-title">Требуется тестирование</p>
                        </div>
                    </div>
                    <div class="mission-creation-buttons justify-content-center">
                        <button class="btn" type="submit">Сохранить</button>
                    </div>
                </div>
            </div>
        </form>
    </content>
</body>